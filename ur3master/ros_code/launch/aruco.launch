<launch>

    <arg name="markerSize"      default="0.1016"/>    <!-- in m -->
    <arg name="side"             default="left"/>
    <arg name="ref_frame"       default="webcam"/>  <!-- leave empty and the pose will be published wrt --> 

    <node pkg="aruco_ros" type="marker_publisher" name="aruco_marker_publisher">
        <remap from="/camera_info" to="/webcam/camera_info" />
        <remap from="/image" to="/webcam/image_raw" />
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size"        value="$(arg markerSize)"/>
        <param name="reference_frame"    value="webcam"/>   <!-- frame in which the marker pose will be$ -->
        <param name="camera_frame"       value="webcam"/>
    </node>

</launch>